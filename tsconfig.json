{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@acdh-oeaw/tsconfig",
	"compilerOptions": {
		"paths": {
			"@/*": ["./*"],
			"@content/*": ["./.content/generated/*"]
		},
		"plugins": [{ "name": "next" }]
	},
	"include": [
		"./next-env.d.ts",
		"./**/*.js",
		// "./**/*.mdx",
		"./**/*.ts",
		"./**/*.tsx",
		"./types/**/*.d.ts",
		".next/types/**/*.ts"
	],
	"exclude": [".content", ".next", "content", "node_modules", "out", "public"],
	"mdx": {
		"checkMdx": false,
		"plugins": ["remark-frontmatter", "remark-gfm"]
	}
}
