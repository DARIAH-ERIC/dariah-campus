{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@acdh-oeaw/tsconfig",
	"compilerOptions": {
		"paths": {
			"@/*": ["./*"]
		},
		"plugins": [{ "name": "next" }]
	},
	"include": [
		"./next-env.d.ts",
		"./**/*.d.ts",
		"./**/*.js",
		// "./**/*.mdx",
		"./**/*.ts",
		"./**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules", "out"],
	"mdx": {
		"checkMdx": false,
		"plugins": ["remark-frontmatter", "remark-gfm"]
	}
}
