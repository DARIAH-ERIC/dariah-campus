{
	"name": "@dariah-eric/dariah-campus",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "^22 || ^24"
	},
	"devEngines": {
		"runtime": {
			"name": "node",
			"version": ">= 22.18 < 23",
			"onFail": "download"
		}
	},
	"packageManager": "pnpm@10.21.0",
	"scripts": {
		"app:build": "next build",
		"app:dev": "next dev --turbopack",
		"build": "run-s generate:handle content:build generate:api-docs generate:metadata-dump app:build typesense:build",
		"content:build": "dotenv -c -- tsx ./scripts/content/generate-content.ts build",
		"content:dev": "dotenv -c -- tsx ./scripts/content/generate-content.ts watch",
		"dev": "concurrently --kill-others --names \"content,app\" --prefix-colors \"auto\" \"pnpm:content:dev\" \"pnpm:app:dev\"",
		"dev:typesense:down": "docker compose --env-file=./.env.local down --volumes",
		"dev:typesense:up": "docker compose --env-file=./.env.local up --detach",
		"format:check": "prettier . --cache --cache-location ./.prettiercache --check",
		"format:fix": "pnpm run format:check --write",
		"generate:api-docs": "dotenv -c -- tsx ./scripts/api/generate-api-docs.ts",
		"generate:handle": "bash ./scripts/handle/create-handle.sh",
		"generate:metadata-dump": "dotenv -c -- tsx ./scripts/api/generate-metadata-dump.ts",
		"i18n:check": "i18n-check --format next-intl --locales ./messages/ --source en --unused ./app/ ./components/",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint .",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:mdx:dead-urls": "tsx ./scripts/content/lint.ts",
		"lint:styles:check": "stylelint \"./styles/**/*.css\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"preinstall": "npx only-allow pnpm",
		"prepare": "run-s setup types:prepare",
		"setup": "is-in-ci || simple-git-hooks",
		"start": "next start",
		"test": "exit 0",
		"test:e2e": "playwright test --config ./e2e/playwright.config.ts --pass-with-no-tests",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:install": "playwright install --with-deps",
		"test:e2e:ui": "pnpm run test:e2e --ui",
		"test:e2e:update-snapshots": "pnpm run test:e2e --update-snapshots",
		"types:check": "tsc --noEmit",
		"types:prepare": "next typegen",
		"typesense:api-key:create": "dotenv -c -- tsx ./scripts/typesense/create-api-key.ts",
		"typesense:build": "dotenv -c production -- tsx ./scripts/typesense/create-search-index.ts",
		"typesense:collection:create": "dotenv -c -- tsx ./scripts/typesense/create-collection.ts",
		"typesense:collection:seed": "dotenv -c -- tsx ./scripts/typesense/seed-collection.ts"
	},
	"dependencies": {
		"@acdh-oeaw/keystatic-lib": "^0.8.0",
		"@acdh-oeaw/lib": "^0.3.5",
		"@acdh-oeaw/mdx-lib": "^0.1.4",
		"@acdh-oeaw/openapi-nextjs": "^0.0.2",
		"@acdh-oeaw/style-variants": "^0.1.0",
		"@acdh-oeaw/validate-env": "^0.1.1",
		"@keystar/ui": "^0.7.19",
		"@keystatic/core": "^0.5.48",
		"@keystatic/next": "^5.0.4",
		"@mdx-js/mdx": "^3.1.1",
		"@react-aria/utils": "^3.31.0",
		"@scalar/nextjs-api-reference": "^0.9.1",
		"@shikijs/rehype": "^3.15.0",
		"@sindresorhus/slugify": "^3.0.0",
		"@valibot/i18n": "^1.0.0",
		"@valibot/to-json-schema": "^1.3.0",
		"client-only": "^0.0.1",
		"clsx": "^2.1.1",
		"hast-util-to-string": "^3.0.1",
		"image-size": "^2.0.2",
		"is-network-error": "^1.3.0",
		"lucide-react": "^0.553.0",
		"mdast-util-mdx-jsx": "^3.2.0",
		"mermaid": "^11.12.1",
		"next": "^16.0.1",
		"next-intl": "^4.5.0",
		"p-limit": "^7.2.0",
		"react": "^19.2.0",
		"react-aria": "^3.44.0",
		"react-aria-components": "^1.13.0",
		"react-dom": "^19.2.0",
		"react-instantsearch-core": "^7.18.0",
		"react-instantsearch-nextjs": "^1.0.4",
		"react-schemaorg": "^2.0.0",
		"rehype-slug": "^6.0.0",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.1",
		"remark-smartypants": "^3.0.2",
		"server-nodejs-only": "^0.0.1",
		"server-only": "^0.0.1",
		"sharp": "^0.34.5",
		"shiki": "^3.15.0",
		"to-vfile": "^8.0.0",
		"typesense": "^2.1.0",
		"typesense-instantsearch-adapter": "^2.9.0",
		"undici": "^7.16.0",
		"unified": "^11.0.5",
		"unist-util-visit": "^5.0.0",
		"uuid": "^13.0.0",
		"valibot": "^1.1.0",
		"vfile": "^6.0.3",
		"vfile-matter": "^5.0.1",
		"xast-util-feed": "^2.0.0",
		"xast-util-to-xml": "^4.0.0",
		"yaml": "^2.8.1"
	},
	"devDependencies": {
		"@acdh-oeaw/content-lib": "^0.1.3",
		"@acdh-oeaw/eslint-config": "^2.0.10",
		"@acdh-oeaw/eslint-config-next": "^4.0.3",
		"@acdh-oeaw/eslint-config-node": "^2.0.10",
		"@acdh-oeaw/eslint-config-playwright": "^2.0.12",
		"@acdh-oeaw/eslint-config-react": "^3.0.2",
		"@acdh-oeaw/eslint-config-tailwindcss": "^3.0.2",
		"@acdh-oeaw/prettier-config": "^2.0.1",
		"@acdh-oeaw/stylelint-config": "^2.3.2",
		"@acdh-oeaw/tsconfig": "^1.5.1",
		"@lingual/i18n-check": "^0.8.12",
		"@next/eslint-plugin-next": "^16.0.1",
		"@playwright/test": "^1.56.1",
		"@react-aria/optimize-locales-plugin": "^1.1.5",
		"@react-types/shared": "^3.32.1",
		"@tailwindcss/postcss": "^4.1.17",
		"@tailwindcss/typography": "^0.5.19",
		"@types/hast": "^3.0.4",
		"@types/mdast": "^4.0.4",
		"@types/mdx": "^2.0.13",
		"@types/node": "^22.19.0",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.2",
		"algoliasearch": "^5.43.0",
		"axe-core": "^4.11.0",
		"axe-playwright": "^2.2.2",
		"babel-plugin-react-compiler": "^1.0.0",
		"concurrently": "^9.2.1",
		"dead-or-alive": "^1.0.4",
		"dotenv": "^17.2.3",
		"dotenv-cli": "^11.0.0",
		"dotenv-expand": "^12.0.3",
		"eslint": "^9.39.1",
		"eslint-config-flat-gitignore": "^2.1.0",
		"eslint-plugin-check-file": "^3.3.1",
		"globals": "^16.5.0",
		"is-in-ci": "^2.0.0",
		"is-online": "^12.0.1",
		"lint-staged": "^16.2.6",
		"mdast-util-mdx-jsx": "^3.2.0",
		"npm-run-all2": "^8.0.4",
		"null-loader": "^4.0.1",
		"prettier": "^3.6.2",
		"remark": "^15.0.1",
		"remark-mdx": "^3.1.1",
		"schema-dts": "^1.1.5",
		"simple-git-hooks": "^2.13.1",
		"stylelint": "^16.25.0",
		"tailwindcss": "^4.1.17",
		"tailwindcss-react-aria-components": "^2.0.1",
		"tsx": "^4.20.6",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.3",
		"unified-lint-rule": "^3.0.1",
		"vfile-reporter": "^8.1.1"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"lint-staged": {
		"*.@(js|ts|tsx)": [
			"eslint --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.!(css|js|ts|tsx)": "prettier --cache --cache-location ./.prettiercache --ignore-unknown --write"
	},
	"postcss": {
		"plugins": {
			"@tailwindcss/postcss": {}
		}
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
